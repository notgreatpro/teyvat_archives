<!-- app/views/weapon_types/index.html.erb -->
<div class="container">
  <h1>Weapon Types</h1>
  <p class="lead">Explore characters by their weapon specialty</p>

  <div class="row row-cols-1 row-cols-md-3 row-cols-lg-5 g-4 mt-3">
    <% @weapon_types.each do |weapon_type| %>
      <div class="col">
        <div class="card h-100 shadow-sm">
          <div class="card-body text-center">
            <h4 class="card-title">
              <%= link_to weapon_type.name, weapon_type_path(weapon_type), class: "text-decoration-none" %>
            </h4>
            
            <p class="card-text">
              <span class="badge bg-primary fs-6">
                <%= weapon_type.characters.count %> Users
              </span>
            </p>
          </div>
          
          <div class="card-footer bg-transparent">
            <%= link_to "View Characters â†’", weapon_type_path(weapon_type), class: "btn btn-sm btn-primary w-100" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>