<!-- app/views/visions/index.html.erb -->
<div class="container">
  <h1>Elemental Visions</h1>
  <p class="lead">Explore characters by their elemental affinity</p>

  <div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 g-4 mt-3">
    <% @visions.each do |vision| %>
      <div class="col">
        <div class="card h-100 shadow-sm">
          <div class="card-body text-center">
            <h3 class="card-title">
              <%= link_to vision.name, vision_path(vision), class: "text-decoration-none" %>
            </h3>
            
            <p class="card-text">
              <span class="badge bg-primary fs-5">
                <%= vision.characters.count %> Characters
              </span>
            </p>
          </div>
          
          <div class="card-footer bg-transparent">
            <%= link_to "View Characters â†’", vision_path(vision), class: "btn btn-sm btn-primary w-100" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>